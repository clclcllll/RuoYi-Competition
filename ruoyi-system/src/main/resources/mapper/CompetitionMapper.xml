<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CompetitionMapper">

    <insert id="insertCompetition" parameterType="com.ruoyi.system.domain.Competition">
        INSERT INTO competitions (competition_name, description, competition_date)
        VALUES (#{competitionName}, #{description}, #{competitionDate})
    </insert>

    <select id="selectAllCompetitions" resultType="com.ruoyi.system.domain.Competition">
        SELECT * FROM competitions
    </select>

</mapper>
